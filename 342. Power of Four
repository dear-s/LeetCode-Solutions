class Solution:
    def isPowerOfFour(self, num: int) -> bool:
        
        
        if num == 0:
            return False


        while num >= 4:

            # if num == 1: return True

            if num % 4 == 0:
                num = num // 4
            else:
                return False
                break

        if num == 1:
            return True
        else:
            return False
